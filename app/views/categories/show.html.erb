<h1><%= @category.name %></h1>
<p>
	<% if can? :update, @category %>
		<%= link_to "Edit", edit_category_path(@category) %> |
	<% end %>
	<% if can? :destroy, @category %>
	  <%= link_to "Destroy", @category, :method => :delete, :confirm => "Are you sure?" %> |&nbsp;
	<% end %>

<%= link_to "Back to Categories", category_index_path %></p>
