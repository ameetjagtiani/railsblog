<h1>Add a New Post</h1>

<%= form_for @post, :html => { :multipart => true } do |f| %>
    <% if @post.errors.any? %>
 		<h2>Errors:</h2>
 		<ul>
 			<% @post.errors.full_messages.each do |message| %>
 				<li><%= message %></li>
 			<% end %>
 		</ul>
	<% end %>
	<p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
	</p>
	<p>
      <%= f.label :content %><br>
      <%= f.text_area :content %>
	</p>
	<p>
		<%= f.label :photo %><br>
		<%= f.file_field :photo %>
	</p>
	<p>
	  <%= f.submit "Add a New Post", :class => "btn primary" %>
	</p>
<% end %>