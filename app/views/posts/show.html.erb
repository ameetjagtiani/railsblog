<p><%= image_tag @post.photo.url(:small) %></p>
<h1><%= @post.title %></h1>
<p><%= @post.content %></p>
<small><%= @post.created_at %></small>
<p>
	<% if can? :update, @post %>
		<%= link_to "Edit", edit_post_path(@post) %> |
	<% end %>
	<% if can? :destroy, @post %>
	  <%= link_to "Destroy", @post, :method => :delete, :confirm => "Are you sure?" %> |&nbsp;
	<% end %>
<%= link_to "Back to Posts", posts_path %></p>
