  <!--start: Container -->
  <div class="container">
        
    <!--start: Wrapper-->
    <div id="wrapper">
    
      <!-- start: Wall -->
      <div id="wall" class="row-fluid">

<!-- If user is Admin then show all posts with approve and remove buttons on posts
else if user is a user then only show posts that have been approved -->
<!-- View: here we want to use twitter bootstrap to set up a pinterest style theme
  we will plugin in the html in the loop and insert the rails statements -->
<h1>Our Blog</h1>

<% @posts.each do |post| %>
  <!-- do a check to see which posts were approved and only show those -->
  <% if can? :manage, :all %>
        <div class="span3 item" style="background-color: #eeeeee;">
          <div class="picture">
            <%= link_to post.title, post %>
              <%= image_tag post.photo.url(:small) %></a>
            <div class="description">
              <p>
                <%= post.content %>
              </p>
            </div>
            <div class="meta">
              <span><i class="fa-icon-calendar"></i><%= post.created_at %></span>
              <span><i class="fa-icon-user"></i> <a href="#">lucas</a></span>
              <span><i class="fa-icon-heart-empty"></i> 88</span>
            </div>
          </div>
        </div>
        <!--

      <div style="float: left; margin-right: 10px; width: 150px; height: 120px;">
        <%= image_tag post.photo.url(:small) %>
     </div>
      <div>
      	<div><h3><%= link_to post.title, post %></h3></div>
      	<div><h2><%= post.created_at %></h2></div>
        <p><%= post.content %></p>
      </div> -->
      
  <% else %>
      <% if post.status_id == 3 %>             
       <div class="span3 item" style="background-color: #eeeeee;">
          <div class="picture">
            <%= link_to post.title, post %>
              <%= image_tag post.photo.url(:small) %></a>
            <div class="description">
              <p>
                <%= post.content %>
              </p>
            </div>
            <div class="meta">
              <span><i class="fa-icon-calendar"></i><%= post.created_at %></span>
              <span><i class="fa-icon-user"></i> <a href="#">lucas</a></span>
              <span><i class="fa-icon-heart-empty"></i> 88</span>
            </div>
          </div>
        </div>
      <% end %>
  <% end %>
  
<% end %>
</div>
</div>
</div>
